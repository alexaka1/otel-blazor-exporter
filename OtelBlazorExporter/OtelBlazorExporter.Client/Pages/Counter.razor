@page "/counter"
@using System.Diagnostics
@using OtelBlazorExporter.Client.Infrastructure.OpenTelemetry
@rendermode InteractiveAuto
@inject LoginMetrics LoginMetrics
@inject ILogger<Counter> Logger

<PageTitle>Counter (@RendererInfo.Name)</PageTitle>

<h1>Counter (@RendererInfo.Name)</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
  private int currentCount;

  private void IncrementCount()
  {
    using var activity = Instrumentation.ActivitySource.StartActivity("Counter increment", ActivityKind.Client);
    LoginMetrics.IncrementLoginAttempts(new KeyValuePair<string, object?>("rendermode", RendererInfo.Name));
    currentCount++;
    Logger.LogWarning("Current count is {Counter}", currentCount);
  }

}
