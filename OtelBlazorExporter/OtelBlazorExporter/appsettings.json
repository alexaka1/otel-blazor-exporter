{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": {
      "LifetimeConsole": {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              "Console"
            ],
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "SourceContext = 'Microsoft.Hosting.Lifetime'"
                }
              }
            ]
          }
        }
      },
      "AsyncConsole": {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "Async",
                "Args": {
                  "configure": {
                    "Console": {
                      "Name": "Console"
                    }
                  }
                }
              }
            ],
            "Filter": [
              {
                "Name": "ByExcluding",
                "Args": {
                  "expression": "SourceContext = 'Microsoft.Hosting.Lifetime'"
                }
              }
            ]
          }
        }
      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "Properties": {
    }
  },
  "AllowedHosts": "*"
}
